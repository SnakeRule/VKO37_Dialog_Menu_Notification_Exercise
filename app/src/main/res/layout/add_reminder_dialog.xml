<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="140dp">

    <TextView
        android:id="@+id/addRemTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/addRem"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/RemContentEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/remWhenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remWhen"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/remWhenEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Seconds"
        android:inputType="number"
        android:textAlignment="center" />

</LinearLayout>